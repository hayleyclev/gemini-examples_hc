! PFRR Joule Heating Event - May 11, 2019

&base
ymd = 2019,5,11               ! year, month, day
UTsec0 = 28800.0              ! start time in UT seconds (7UT)
tdur = 21600.0                  ! duration of simulation in seconds (7 hours - until 14UT)
dtout = 600.0                  ! how often to do file output (every 10 mins)
activ = 78.0,78.0,24.0      ! f107a,f107,Ap
tcfl = 0.9                    ! target cfl number
Teinf = 1500.0                ! exospheric electron temperature
/

&flags
potsolve = 0        ! solve electrodynamics:   0 - no; 1 - electrostatic; 2 - inductive
flagperiodic = 0    ! whether periodic
flagoutput = 1      ! 1 - full output
/

&setup
dtheta=5
dphi=35
lp=96
lq=128
lphi=32
altmin=80e3
glat=65
glon=-147
gridflag=0

nmf=5e11
nme=2e11
/

&files
indat_size = 'inputs/simsize.h5'
indat_grid = 'inputs/simgrid.h5'
indat_file = 'inputs/initial_conditions.h5'
/
